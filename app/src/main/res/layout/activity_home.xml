<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="50dp"
    android:layout_marginBottom="120dp"
    android:id="@+id/layout_activity_home">

    <include layout="@layout/fragment_errorcode"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="160dp"
        android:layout_alignParentBottom="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_mode_normal_on"
                android:scaleType="fitCenter"
                android:background="#00000000"
                android:id="@+id/button_home_mode"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:id="@+id/text_runing_mode"
                android:text="怠速模式"
                android:textSize="30dp"
                android:textColor="@color/colorString"/>
        </LinearLayout>


    </RelativeLayout>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="#FFFFFF"
        android:layout_marginBottom="158dp"
        android:layout_alignParentBottom="true"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_alignParentBottom="true">
        <LinearLayout
            android:layout_width="160dp"
            android:layout_height="120dp"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_alignParentBottom="true">
            <ImageView
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="80dp"
                android:scaleType="fitCenter"
                android:id="@+id/image_door_type"
                android:src="@drawable/ic_bi_revolvingdoor" />
        </LinearLayout>
        <ImageView
            android:layout_width="2dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_height="fill_parent"
            android:background="#FFFFFF"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_alignParentBottom="true">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/text_door_number"
                android:gravity="bottom"
                android:text="编号：001"
                android:textSize="18dp"
                android:textColor="@color/colorString"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:id="@+id/text_door_type"
                android:text="类型：两翼安全旋转自动门"
                android:textSize="18dp"
                android:textColor="@color/colorString"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/text_door_address"
                android:gravity="top"
                android:text="位置：A座大堂主入口"
                android:textSize="18dp"
                android:textColor="@color/colorString"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
