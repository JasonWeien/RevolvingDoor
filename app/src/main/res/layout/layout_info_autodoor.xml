<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/layout_info_AutoDoor">

    <lafaya.revolvingdoor.utils.AutoCountListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/grid_infoAutoDoor"
        android:scrollbars="none"
        android:verticalSpacing="2dp"
        android:background="@color/ic_launcher_background"
        />



    <!--    最近10次报警代码-->
    <Button
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:paddingLeft="10dp"
        android:paddingRight="20dp"
        android:background="@color/colorBackground"
        android:gravity="center_vertical"
        android:id="@+id/button_info_TenErrorCode"
        android:text="最近10次报警代码"
        android:textSize="22dp"
        android:textColor="@color/colorString"/>
        <lafaya.revolvingdoor.utils.AutoCountListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/grid_info_TenErrorCode"
            android:scrollbars="none"
            android:verticalSpacing="2dp"
            android:background="@color/ic_launcher_background"
            />

    <!--    最近10次系统复位原因-->
    <Button
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:paddingLeft="10dp"
        android:paddingRight="20dp"
        android:background="@color/colorBackground"
        android:id="@+id/button_info_TenResetCode"
        android:gravity="center_vertical"
        android:text="最近10次系统复位原因"
        android:textSize="22dp"
        android:textColor="@color/colorString"/>
    <lafaya.revolvingdoor.utils.AutoCountListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/grid_info_TenResetCode"
        android:scrollbars="none"
        android:verticalSpacing="2dp"
        android:background="@color/ic_launcher_background"
        />

    <!--    严重错误信息-->
    <Button
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:paddingLeft="10dp"
        android:paddingRight="20dp"
        android:background="@color/colorBackground"
        android:id="@+id/button_info_BadErrorCode"
        android:gravity="center_vertical"
        android:text="严重错误信息"
        android:textSize="22dp"
        android:textColor="@color/colorString"/>
    <lafaya.revolvingdoor.utils.AutoCountListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/grid_info_BadErrorCode"
        android:scrollbars="none"
        android:verticalSpacing="2dp"
        android:background="@color/ic_launcher_background"
        />


</LinearLayout>
